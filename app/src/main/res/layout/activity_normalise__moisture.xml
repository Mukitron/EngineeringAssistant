<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="za.co.mukitron.engineeringassistant.Normalise_Moisture">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:text="Normalise Moisture to 20 degrees Celcius"
        android:textAlignment="center"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/moisture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Moisture Reading (ppm)"
        android:inputType="number" />

    <EditText
        android:id="@+id/tempS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sampling Temperature (Degree Celcius)"
        android:inputType="number" />

    <!--<EditText-->
    <!--android:id="@+id/tempN"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:ems="10"-->
    <!--android:hint="Normalised Temperature (Degree Celcius)"-->
    <!--android:inputType="number"-->
    <!--android:text="20"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Moisture normalise to 20 Degrees Celcius" />

    <TextView
        android:id="@+id/normalisedMoisture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="normaliseMoisture"
            android:text="Normalise"
            android:textAllCaps="true" />

    </RelativeLayout>

</LinearLayout>
